generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


//https://zenn.dev/devgeeeen/articles/125a076f81b0df
model task {
  id      Int     @default(autoincrement()) @id
  title   String
  content String?
}

